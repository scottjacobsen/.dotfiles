# -*- mode: ruby; -*-

def _require gem
  require gem
rescue LoadError
end

_require "byebug"
_require "pry-byebug"
_require "pry-stack_explorer"
_require "pry-doc"

Pry.commands.alias_command "c", "continue"
Pry.commands.alias_command "s", "step"
Pry.commands.alias_command "n", "next"
Pry.commands.alias_command "ss", "show-stack"

if ENV["EMACS"]
  Pry.config.correct_indent = false
  Pry.config.pager = false
end
Pry.config.color = true

begin
  require "hirb"
  extend Hirb::Console
rescue LoadError
end

begin
  require "awesome_print"
  AwesomePrint.pry!
  AwesomePrint.defaults = {
    # indent 2 spaces. Negative means left align hash keys.
    indent: -2
  }
rescue LoadError
end
