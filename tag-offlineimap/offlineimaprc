# -*- mode: conf; -*-
# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = scottericjacobsen, neighborland
socktimeout = 60
fsync = false
maxsyncaccounts = 3
maxage = 3
pythonfile = ~/.offlineimap.py

############## Personal ################
[Account scottericjacobsen]
localrepository = local-scottericjacobsen
remoterepository = remote-scottericjacobsen
synclabels = yes
labelsheader = X-Keywords
maxconnections = 3
autorefresh = 10
quick = 5

[Repository local-scottericjacobsen]
type = GmailMaildir
localfolders = ~/Maildir/scottericjacobsen
nametrans = nametrans_local

[Repository remote-scottericjacobsen]
type = Gmail
remoteuser = scottericjacobsen@gmail.com
remotepasseval = mailpasswd("scottericjacobsen.gmail.com.gpg")
sslcacertfile = /usr/local/etc/openssl/cert.pem
maxconnections = 3
folderfilter = folder_filter
nametrans = nametrans_remote

######### NEIGHBORLAND ####################
[Account neighborland]
localrepository = local-neighborland
remoterepository = remote-neighborland
synclabels = yes
maxconnections = 3
labelsheader = X-Keywords
autorefresh = 10
quick = 5

[Repository local-neighborland]
type = GmailMaildir
localfolders = ~/Maildir/neighborland
nametrans = nametrans_local

[Repository remote-neighborland]
type = Gmail
remoteuser = scott@neighborland.com
remotepasseval = mailpasswd("scott.neighborland.com.gpg")
sslcacertfile = /usr/local/etc/openssl/cert.pem
maxconnections = 3
folderfilter = folder_filter
nametrans = nametrans_remote

[mbnames]
enabled = yes
filename = ~/.mutt/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
